{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "classic",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "javascripts/*"]
    },
    "sourceMap": true,
    "target": "es5",
    "forceConsistentCasingInFileNames" : true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "outDir": "dist",
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "!node_modules/@types",
    "vendor",
    "public",
    "dist",
    "tmp",
  ],
  "compileOnSave": false,
  "include": [
    "javascripts/**/*.ts"
  ],
}
