source 'https://rubygems.org'

gemspec


group :development do
  gem 'rake'
  gem 'sprockets'
  gem 'uglifier'
  gem 'blade'
  gem 'typescript-sprockets',
      git: 'https://github.com/preetpalS/typescript-sprockets.git',
      tag: '0.0.10',
      require: 'typescript-sprockets'

  ##########################
  ## Front-End Asset Gems ##
  ##########################

  # Use jquery as the JavaScript library
  gem 'jquery-rails'
  # Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
  gem 'turbolinks', '~> 5.0.0'
  # There was additional work done in terms of including stuff in scss file,
  # deleting application.css file, stealing generated code from twitter-bootstrap-rails,
  # install twitter-bootstrap-rails for ruby helper functions.
  # For bootstrap
  gem 'bootstrap-sass', '~> 3.3.6'
  gem 'bootswatch-rails', '~> 3.3.5'
  # For jquery context menu library
  gem 'rails-assets-jQuery-contextMenu', source: 'https://rails-assets.org'
  # d3.js visualization library
  gem 'd3_rails'
  # Compat Library
  gem 'jquery-turbolinks'
end
